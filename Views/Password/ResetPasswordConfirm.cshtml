@model LoginService.Models.ResetPasswordConfirmModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Enter your new password and click Reset Password.";
}
<h2>@ViewData["Title"]</h2>
<form method="post" asp-controller="Password" asp-action="ResetPasswordConfirm" asp-antiforgery="true">
    <div class="form-group">
        <input type="text" id="Token" name="Token" value="@Model.Token" class="form-control" required hidden autocomplete="off" />
        <span asp-validation-for="Token" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="email" id="Email" name="Email" value="@Model.Email" class="form-control" required hidden autocomplete="off" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label id="newpassword-label" for="NewPassword">New Password:</label>
        <input type="password" id="NewPassword" name="NewPassword" asp-for="NewPassword" class="form-control" required autocomplete="new-password" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label id="confirmpassword-label" for="ConfirmPassword">Confirm Password:</label>
        <input type="password" id="ConfirmPassword" name="ConfirmPassword" asp-for="ConfirmPassword" class="form-control" required autocomplete="new-password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Reset Password</button>
</form>